// first load the beads
<% unless @beads.empty? %>
	$("#dynamic_beads").html("<i><%=raw escape_javascript('click the bead to add it to the current interest') %></i>");
	$("#dynamic_beads").append("<%=raw escape_javascript(render(:partial => 'shared/searched_bead', :collection => @beads, :locals => {:interest_id => @interest.id})) %>");
<% else %>
	$("#dynamic_beads").html("<i><%=raw escape_javascript('no result in active beads') %></i>");
<% end %>
// then load the nouns for concepts
<% unless @nouns.empty? %>
	$("#dynamic_nouns").html("<i><%=raw escape_javascript('click the concept to activate it and it to the current interest') %></i>");
	$("#dynamic_nouns").append("<%=raw escape_javascript(render(:partial => 'shared/searched_noun', :collection => @nouns, :locals => {:interest_id => @interest.id})) %>");
<% else %>
//show message for nouns
	$("#dynamic_nouns").html("<i><%=raw escape_javascript('end of extended search...') %></i>");
<% end %>
