<%# left side render %>
<% content_for :leftside do %>
  <%= render :partial => current_user %>
<% end %>
<%= render :partial => @bead %>

<%= link_to 'Edit', edit_bead_path(@bead) %> |
<%= link_to 'Back', beads_path %>
<div id="Bead Fabric Render">
  <%= render :partial => @bead.posts %>
</div>
<br />
<% content_for :rightside do %>

  <h2>Add new post:</h2>
  <%= form_for :post, :url => posts_path do |f| %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title, :size => "20"%>
    </p>
    <p>
      <%= f.label :content %><br />
      <%= f.text_area :content, :size => "40x6"%>
    </p>
  <%= f.hidden_field :bead_ids, :value => @bead.id %>

   <%# needed if bead_posts join is not working = debug(@interest.bead_ids) %>
    <p><%= f.submit "Add post" %></p>
  <% end %>

<% end %>

