<%# left side render %>
<% content_for :leftside do %>
  <%= render :partial => current_user %>
<% end %>
<div id="interest" data-id="<%= @interest.id %>">
<%# middle part render %>
<h2>Interest: <%= @interest.title %></h2> beads: <% @interest.beads.each do |beader| %>
  | <%= link_to beader.title, beader %>
  <% end %>
 ( <%= link_to 'Edit', edit_interest_path(@interest) %> )<br /><br />

<%= render 'posts/form' %>

  <h2><%= pluralize(@interest.post_content.size, 'post') %></h2>
<%#= render :partial => @interest.post_content %>
  <div class="dynamic" id="buffer" style="display: none">
  </div>
<% unless @interest.post_content.empty? %>

  <div class="dynamic" id="post_content">
    <%= render :partial => @interest.post_content %>
  </div>
<% end %>
</div>

