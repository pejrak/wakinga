<%# left side render %>
<% content_for :leftside do %>
  <%= render :partial => current_user %>
<% end %>

<%# middle part render %>
<h2>Interest: <%= @interest.title %></h2> beads: <% @interest.beads.each do |beader| %>
  | <%= link_to beader.title, beader %>
  <% end %>
<br />
<br />
<%= render :partial => @interest.post_content %>
<%# debug(@interest.post_content) %>
<h2>Add new post:</h2>
<%= form_for :post, :url => posts_path do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
<%= f.collection_select :bead_ids, @interest.beads.all, :id, :title, {}, :multiple => true , :prompt => true %>

 <%# needed if bead_posts join is not working = debug(@interest.bead_ids) %>
  <p><%= f.submit "Add post" %></p>
<% end %>

<%= link_to 'Edit', edit_interest_path(@interest) %> |
<%= link_to 'Back', interests_path %>

<%# left side render %>
<% content_for :rightside do %>
<%# will be trendlines for the current interest %>
<% end %>


