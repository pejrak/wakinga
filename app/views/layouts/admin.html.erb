<!DOCTYPE html>
<html>
<%= render 'shared/head' %>
<%= yield :head %>
  <body>


<div id="container">
  <table class="main" width = "100%">
  <tr class="top_stripe">
    <td><%= link_to image_tag('/images/wakinga_logo.png', :border => 0, :class => 'wakinga_logo'), root_path %></td>
    <td>
      <%= yield :middletop %>
    </td>
    <td class="top_right">
              <% if admin_signed_in? %>
          Administrator signed on as <strong><%# link_to current_user.email, edit_user_registration_path(current_user) %><%= current_admin.email %></strong>. Not you?
          <%= link_to "Sign out", destroy_admin_session_path %>
        <% else %>
          <%# link_to "Sign up", new_user_registration_path %>
          <%= "Admin registration is disabled." %>
        <% end %>

      
    </td>
  </tr>
  <tr class="mid_stripe">
    <%# yields for page components, use content_for to fill %>
    <td class="leftside"><%= yield :leftside %></td>
    <td class="middle">
          <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
<%= yield %></td>
    <td class="rightside"><%= yield :rightside %></td>
  </tr>
  </table>
<%# main yield for anything without content_for %>
  <%= yield :bottom %>
      </div>
