<!DOCTYPE html>
<html>
<%= render 'shared/head' %>
<%= yield :head %>
  <body>


<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-1341161-4']);
  _gaq.push(['_trackPageview']);
  (function() {
	var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>

<div id="container">
  <table class="main" width = "100%">
  <tr class="top_stripe">
    <td><%= link_to image_tag('/images/wakinga_logo.png', :border => 0, :class => 'wakinga_logo'), root_path %></td>
    <td>
      <%= yield :middletop %>

                <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
    </td>
    <td class="top_right">
      <% if user_signed_in? %>
          Signed in as <strong><%# link_to current_user.email, edit_user_registration_path(current_user) %><%= current_user.email %></strong>. Not you?
          <%= link_to "Sign out", destroy_user_session_path %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path %>
          <%# "New registrations are disabled, let me know at " %>
          <%# link_to "spontain@gmail.com", 'mailto:spontain@gmail.com' %>

        <% end %>

      
    </td>
  </tr>
  <tr class="mid_stripe">
    <%# yields for page components, use content_for to fill %>
    <td class="leftside"><%= yield :leftside %></td>
    <td class="middle">

<%= yield %></td>
    <td class="rightside"><%= yield :rightside %></td>
  </tr>
  </table>
<%# main yield for anything without content_for %>
  <%= yield :bottom %>
      </div>
    <p class="footer" align="left">© 2011 by Spontain</p>
    <div id="paramsinspect"><%# params.inspect %></div>
	</body>
</html>
