<% if @refresh_indicator == false %>
  $(".activated_post_container").html("<%=raw escape_javascript(render(:partial => 'activated_post', :object => @post)) %>");
<% elsif @refresh_indicator == true %>
  $(".comments_content_container").html("<%=raw escape_javascript(render(:partial => @post.comments)) %>");
<% end %>
  if ($(".activated_post").length > 0) {
    var postid = $('.activated_post').attr('data-id');
    $(".post#"+postid).css("border-left","#2CA200 solid 3px");
  }
