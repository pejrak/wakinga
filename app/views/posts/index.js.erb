<% unless @dynamic_posts.empty? %>
$(".dynamic#buffer").html("<%=raw escape_javascript(link_to(pluralize(@dynamic_posts.size.to_s + ' new ', 'post'), '#', :remote => true, :class => 'post_show')) %>").show();
$('.post_show').click(function() {
      $(".dynamic#post_content").html("<%=raw escape_javascript(render(@interest.post_content(@interest.user))) %>");
      $(".dynamic#memories").html("<%=raw escape_javascript(render(@interest.memorized_post_content(true,@interest.user))) %>");
      $(".post_size").html("<%=raw escape_javascript(pluralize(@interest.post_content(@interest.user).size.to_s + ' new ', 'post')) %>");
      $(".dynamic#buffer").slideUp();
      });
<% else %>
      $(".dynamic#post_content").html("<%=raw escape_javascript(render(@interest.post_content(@interest.user))) %>");
      $(".dynamic#memories").html("<%=raw escape_javascript(render(@interest.memorized_post_content(true,@interest.user))) %>");
      $(".post_size").html("<%=raw escape_javascript(pluralize(@interest.post_content(@interest.user).size.to_s + ' new ', 'post')) %>");
      $(".memory_post_size").html("<%=raw escape_javascript(pluralize(@interest.memorized_post_content(true,@interest.user).size.to_s, 'memory')) %>");
<% end %>
  if ($(".activated_post").length > 0) {
    $.getScript("/posts/" + $('.activated_post').attr('data-id') + "/activate.js?indicator=true");
  }